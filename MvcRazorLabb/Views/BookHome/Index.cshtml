@model HomeViewModel

<h2>Alla böcker som finns i biblioteket</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>Titel</th>
            <th>Författare</th>
            <th>Tillgänglig för lån</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>

                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.IsAvailable</td>
            </tr>
        }

    </tbody>
</table>
